    const tg = window.Telegram?.WebApp;

    if (tg) {
      tg.expand();

      const user = tg.initDataUnsafe?.user;
      if (user) {
        document.getElementById("username").textContent = user.first_name || "–∫–ª–∏–µ–Ω—Ç";
      }

      document.getElementById("btn-order").onclick = () => {
        tg.sendData(JSON.stringify({ action: "create_order_test" }));
        tg.close();
      };
